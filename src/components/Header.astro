---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import '../styles/global.css';
import '../styles/tailwind.css';
---

<header class="bg-black text-white py-1 sticky top-0 z-50 shadow-md transition-all duration-300" id="main-header">
	<div class="max-w-[1920px] mx-auto px-4">
		<nav class="grid items-center gap-0" style="display: grid; grid-template-columns: 2.5fr 5fr 2.5fr;">
			<!-- Logo Section -->
			<div class="py-0 px-2 rounded-l">
				<a href="/mikenavales-xyz/" class="hover:opacity-80 transition-opacity inline-block h-full">
					<img 
						src="/cropped-20200727-v2-2560x1440-transparent-logo-banner-mikenavales-xyz-1-300x100.png" 
						alt="Mike Navales - Web Developer" 
						width="250" 
						height="83"
						class="h-[50px] w-auto object-contain"
					/>
				</a>
			</div>
			
			<!-- Navigation Links -->
			<div id="nav-links" class="hidden md:flex gap-6 justify-center p-0">
				<a href="/mikenavales-xyz/projects" class="hover:text-gray-300 transition-colors relative pl-5 before:content-['/'] before:absolute before:left-0 before:text-gray-500 before:text-xl text-xl hover:before:text-white hover:scale-105 transform duration-200">
					projects
				</a>
				<a href="/mikenavales-xyz/blog" class="hover:text-gray-300 transition-colors relative pl-5 before:content-['/'] before:absolute before:left-0 before:text-gray-500 before:text-xl text-xl hover:before:text-white hover:scale-105 transform duration-200">
					blog
				</a>
				<a href="/mikenavales-xyz/about" class="hover:text-gray-300 transition-colors relative pl-5 before:content-['/'] before:absolute before:left-0 before:text-gray-500 before:text-xl text-xl hover:before:text-white hover:scale-105 transform duration-200">
					about
				</a>
				<a href="/mikenavales-xyz/connect" class="hover:text-gray-300 transition-colors relative pl-5 before:content-['/'] before:absolute before:left-0 before:text-gray-500 before:text-xl text-xl hover:before:text-white hover:scale-105 transform duration-200">
					connect
				</a>
			</div>
			
			<!-- Social Links -->
			<div class="flex justify-end p-0 rounded-r">
				<div class="social-links hidden md:flex">
					<a href="https://github.com/mayknxyz" target="_blank">
						<span class="sr-only">Go to Mike's GitHub repo</span>
